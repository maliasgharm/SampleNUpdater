<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"> <item android:state_enabled="false">
    <shape>
        <gradient android:startColor="#C47171"
                  android:centerColor="#C57A7A"
                  android:endColor="#C57A7A"
                  android:angle="45"/>
        <corners android:radius="10dp" />
    </shape>
</item>
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#BB2222"
                      android:centerColor="#BB2222"
                      android:endColor="#DB3838"
                      android:angle="45"/>
            <corners android:radius="10dp" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <gradient android:startColor="#D32F2F"
                      android:centerColor="#D32F2F"
                      android:endColor="#D32F2F"
                      android:angle="45"/>
            <corners android:radius="10dp" />
        </shape>
    </item>
</selector>