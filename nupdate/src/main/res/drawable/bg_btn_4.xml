<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"> <item android:state_enabled="false">
    <shape>
        <gradient android:startColor="#66C98F"
                  android:centerColor="#75CE9A"
                  android:endColor="#75CE9A"
                  android:angle="45"/>
        <corners android:radius="10dp" />
    </shape>
</item>
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#00C853"
                      android:centerColor="#00C853"
                      android:endColor="#21CA67"
                      android:angle="45"/>
            <corners android:radius="10dp" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <gradient android:startColor="#72bf44"
                      android:centerColor="#72bf44"
                      android:endColor="#7BDA41"
                      android:angle="45"/>
            <corners android:radius="10dp" />
        </shape>
    </item>
</selector>